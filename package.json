{
  "name": "boilerplate",
  "version": "0.1.0",
  "description": "boilerplate for react web apps",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --inline --hot",
    "test": "npm run jest && npm run lint",
    "build": "NODE_ENV=prod webpack",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "jest": "NODE_ENV=test jest",
    "jest:coverage": "NODE_ENV=test jest --coverage"
  },
  "author": "Octave \"Dispix\" Raimbault <dispyx@gmail.com>",
  "license": "ISC",
  "engines": {
    "npm": "6.9.2"
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-react-remove-prop-types",
          "transform-react-constant-elements"
        ]
      },
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "\\.(sass|scss)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./src/__mocks__/fileMock.js"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "expect",
      "test"
    ],
    "ignore": [
      "build",
      "coverage"
    ]
  },
  "dependencies": {
    "react": "15.4.1",
    "react-dom": "15.4.1",
    "react-redux": "4.4.6",
    "react-router": "3.0.0",
    "redux": "3.6.0"
  },
  "devDependencies": {
    "babel-core": "6.20.0",
    "babel-jest": "^17.0.2",
    "babel-loader": "6.2.9",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-plugin-transform-react-constant-elements": "6.9.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.11",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "css-loader": "^0.26.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "17.0.3",
    "jest-cli": "^17.0.3",
    "json-loader": "^0.5.4",
    "node-sass": "^3.13.0",
    "react-test-renderer": "^15.4.1",
    "sass-loader": "^4.0.2",
    "standard": "8.6.0",
    "style-loader": "^0.13.1",
    "webpack": "2.1.0-beta.27",
    "webpack-dev-server": "1.16.2"
  }
}
